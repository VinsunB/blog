
<div class="wrapper">
<%= @post.content.html_safe%>
</div>

<br>
<% if admin? %>
<%= link_to "Edit", edit_post_path(@post) %>
<%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure?"} %>
<% end %>
<%= link_to "Back", :back %>
<%= form_for [@post, @post.comments.build ] do |f| %>

Leave a Comment <br>
<%= f.text_area :body%>
<br>
<%= f.submit %>
<% end %>

<%= render 'comments/comments'%>

